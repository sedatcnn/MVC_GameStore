@using MVCProje.Models.DTO

@model TurEkleGuncelleDto
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-header">
        Tur güncelleme sayfası
    </div>
    <div class="card-body">
        @using (Html.BeginForm("Guncelle", "Tur", FormMethod.Post))
        {
            @Html.HiddenFor(x => x.Id)
            <div class="my-3">
                <label class="form-label" for="Ad">Tur</label>

                @Html.TextBoxFor(x => x.Ad, "", new { @class = "form-control", placeHolder = "Tur adını giriniz" })

            </div>

            <button type="submit" class="btn btn-success my-3">
                Güncelle
            </button>
        }
    </div>
</div>


