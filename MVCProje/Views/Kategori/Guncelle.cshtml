@using MVCProje.Models.DTO
@model KategoriEkleGuncelleDto
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="card">
    <div class="card-header">
        Kategori güncelleme sayfası
    </div>
    <div class="card-body">
        @using (Html.BeginForm("Guncelle", "Kategori", FormMethod.Post))
        {
            @Html.HiddenFor(x => x.Id)
            <div class="my-3">
                <label class="form-label" for="KategoriAd">Kategori</label>

                @Html.TextBoxFor(x => x.KategoriAd, "", new { @class = "form-control", placeHolder = "Kategori adını giriniz" })

            </div>

            <button type="submit" class="btn btn-success my-3">
                Güncelle
            </button>
        }
    </div>
</div>